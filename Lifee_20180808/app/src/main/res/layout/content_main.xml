<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="ログインしてください" />


            <TextView
                android:id="@+id/login"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/name"
                android:background="#00000000"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="ログイン" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:paddingTop="3dp"
                android:src="@drawable/kkklogin" />

            <TextView
                android:id="@+id/medical_checkup"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_below="@+id/login"
                android:background="#f39c12"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="                  健康診断"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/bmi"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_below="@+id/medical_checkup"
                android:layout_marginTop="1dp"
                android:background="#f39c12"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="                  BMI"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lifestyle"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_below="@+id/bmi"
                android:layout_marginTop="1dp"
                android:background="#219980"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="                  生活習慣病検査"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cancer"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lifestyle"
                android:background="#219980"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="                  癌関連検査"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/infection"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_below="@+id/cancer"
                android:layout_marginTop="1dp"
                android:background="#219980"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="                  感染症検査"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/biochemical"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_below="@+id/infection"
                android:layout_marginTop="1dp"
                android:background="#219980"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="                   生化学検査"
                android:textColor="#ffffff"
                android:textSize="20dp" />


            <ImageView
                android:layout_width="81dp"
                android:layout_height="78dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login"
                android:layout_marginStart="0dp"
                android:src="@drawable/icon01" />

            <ImageView
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/medical_checkup"
                android:src="@drawable/icon02" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="78dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/bmi"
                android:src="@drawable/icon03" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="77dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lifestyle"
                android:src="@drawable/icon04" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cancer"
                android:src="@drawable/icon05" />

            <ImageView
                android:layout_width="81dp"
                android:layout_height="76dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/infection"
                android:src="@drawable/icon06" />


        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>