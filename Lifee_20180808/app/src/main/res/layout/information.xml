<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/i_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lifee"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/i_s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="プライバシーポリシー                   "
            android:gravity="center"
            android:onClick="onClick"
            android:layout_below="@+id/i_s1"
            android:layout_marginTop="30dp"
            android:textSize="15dp"/>
        <View
            android:id="@+id/i_l1"
            android:layout_below="@+id/i_s2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/i_s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="サービス利用規約                            "
            android:layout_alignLeft="@+id/i_s2"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="onClick"
            android:layout_below="@+id/i_l1"
            android:textSize="15dp"/>
        <View
            android:id="@+id/i_l2"
            android:layout_below="@+id/i_s3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/i_s4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ライセンス        　　   　　　         "
            android:gravity="center"
            android:layout_alignLeft="@+id/i_s2"
            android:layout_margin="5dp"
            android:onClick="onClick"
            android:layout_below="@+id/i_l2"
            android:textSize="15dp"/>
        <View
            android:layout_below="@+id/i_s4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="バージョン:1.0.8\nCopyright@2017 Lifee"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>